<h1 align="center">Players</h1>
<div align="center">
  <%= will_paginate %>
    <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <% if user != current_user %>
            <div class="well col-md-4 col-md-offset-4">
              <li><%=  link_to image_tag(user.avatar.url(:thumb)), user_path(user) %></li>
              <li class="article-title">
                <%= link_to user.username, user_path(user)%>
              </li>
              <li>
                Wins: <%= user.wins %>
              </li>
              <li>
                Losses: <%= user.losses %>
              </li>
              <li>
                <% if user.online == 'online' %>
                  <a><%= link_to "Battle", battlefield_path(:player_id => current_user.id, :enemy_id => user.id), method: :post, 
                        class: "btn btn-success btn-md start-chat"%></a>
                <% end %>
              </li>
            </div>
          <% end %>
        </div>
      </ul>
    <% end %>
  <%= will_paginate %>
</div>
