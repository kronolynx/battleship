<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "Battleship", root_path, class: "navbar-brand" %>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <% if logged_in? %>
        <ul class="nav navbar-nav col-md-6">
          <li><%= link_to "Users", users_path  %></li>
        </ul>
        <ul class="nav navbar-right col-md-4">
          <li class="col-md-8 user-name text-right dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                aria-haspopup="true" aria-expanded="false">
              <%= image_tag(current_user.avatar.url(:thumb), :class => "round-image-40") %>
              <%= current_user.username %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "View your profile", user_path(current_user) %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Edit your profile", edit_user_registration_path(current_user) %></li>
            </ul>
          </li>
          <li class="col-md-4 zero-padding-left">
              <li class="col-md-4 zero-padding-left">
                  <%= link_to("logout", destroy_user_session_path, class: "btn btn-xs btn-danger", method: :delete) %>
              </li>
          </li>
        </ul>
      <% else %> 
          <ul class="nav navbar-right col-md-4">
            <li class="col-md-4">
              <%= link_to("Sign up", new_user_registration_path , class: "btn btn-xs btn-primary") %>
            </li>
            <li class="col-md-4">
              <%= link_to("Sign in", user_session_path, class: "btn btn-xs btn-primary") %>
            </li>
          </ul>
      <% end %>
    </div>
  </div>
</div>